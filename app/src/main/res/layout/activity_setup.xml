<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhinav.buzzer.SetupActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_account_circle_black_24dp"
        android:id="@+id/profileImageButton"
        android:background="@android:drawable/screen_background_light_transparent"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/profileImageButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/setupNamefield"
        android:layout_marginTop="20dp"
        android:hint="Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setupNamefield"
        android:layout_centerHorizontal="true"
        android:id="@+id/setupLocationfield"
        android:layout_marginTop="20dp"
        android:hint="From Where you belong?" />

    <Button
        android:text="Save Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/setupSubmitButton"
        android:theme="@style/AppTheme.Button"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_below="@+id/setupLocationfield"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/dobButton" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_toLeftOf="@+id/dobButton"
        android:layout_toStartOf="@+id/dobButton"
        android:id="@+id/dob" />

    <TextView
        android:text="Date of Birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/dobButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/collegeChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Choose your college"
        android:theme="@style/AppTheme.Button"
        android:layout_below="@+id/dobButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collegeChoose"
        android:layout_centerHorizontal="true"
        android:id="@+id/collegeNameSelect"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:hint="College Name" />

</RelativeLayout>
