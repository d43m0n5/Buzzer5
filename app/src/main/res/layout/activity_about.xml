<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    tools:context="com.example.abhinav.buzzer.Utility.AboutActivity">

   <android.support.v7.widget.CardView
       android:id="@+id/cardView"
       android:layout_width="match_parent"

       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="36dp">

  <ImageView
        android:id="@+id/post_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/post_content"
      android:layout_alignParentStart="true"
      app:srcCompat="@color/cardview_shadow_start_color" />

           <TextView
               android:id="@+id/post_content"
               android:layout_width="230dp"
               android:layout_height="27dp"
               android:layout_marginStart="145dp"
               android:layout_marginTop="5dp"
               android:ems="10"
               android:text="Abhinav Pandey"
               android:textStyle="bold" />

       <TextView
           android:layout_width="230dp"
           android:layout_height="28dp"
           android:layout_below="@+id/post_content2"
           android:layout_marginStart="145dp"
           android:layout_marginTop="30dp"
           android:ems="10"
           android:text="abhinav.pandey3@hotmail.com" />

       <TextView
           android:layout_width="230dp"
           android:layout_height="28dp"
           android:layout_below="@+id/post_content2"
           android:layout_marginStart="145dp"
           android:layout_marginTop="55dp"
           android:ems="10"
           android:text="Developer"
           android:textStyle="bold" />


   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="21dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/post_content"
            android:layout_alignParentStart="true"
            app:srcCompat="@color/cardview_shadow_start_color" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_below="@+id/post_content2"
            android:layout_marginStart="145dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:text="abhijais9451@gmail.com" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_below="@+id/post_content2"
            android:layout_marginStart="145dp"
            android:layout_marginTop="55dp"
            android:ems="10"
            android:text="Developer"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_content2"
            android:layout_width="230dp"
            android:layout_height="28dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="Abhishek Jaiswal"
            android:textStyle="bold" />


    </android.support.v7.widget.CardView>



</RelativeLayout>
